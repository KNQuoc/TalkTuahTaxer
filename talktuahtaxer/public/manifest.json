{
    "name": "Talk Tuah Taxer",
    "version": "1.0.0",
    "description": "An extension.",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_title": "Talk Tuah Taxer"
    },
    "permissions": [
        "activeTab", 
        "scripting", 
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "http://127.0.0.1:8000/*",
        "https://www.amazon.com/*"
    ],
    "content_scripts": [
        { 
            "js": ["scripts/content.js"],
            "css": ["scripts/content.css"],
            "matches": [
                "https://www.amazon.com/gp/cart*",
                "https://www.amazon.com/cart*"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "CaseOh.jpg", "ChillGuy.jpeg", "LivvyDunne.png", "KaiCenat.png", "BubbleLeft.png", "BubbleRight.png", "Background.png"
            ],
            "matches": ["<all_urls>"]
        }
    ]   
  }