{
    "name": "Talk Tuah Taxer",
    "version": "1.0.0",
    "description": "An extension.",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_title": "Talk Tuah Taxer"
    },
    "permissions": [
        "activeTab", "scripting", "tabs"
    ],
    "host_permissions": [
        "https://www.amazon.com/*", "http://127.0.0.1:8000/*"
    ],
    "content_scripts": [
        { 
            "js": ["scripts/content.js"],
            "css": ["scripts/content.css"],
            "matches": ["https://www.amazon.com/cart*"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "CaseOh.jpg", "ChillGuy.jpeg", "LivvyDunne.png", "KaiCenat.jpg", "BubbleLeft.png", "BubbleRight.png"
            ],
            "matches": ["<all_urls>"]
        }
    ]   
  }